<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Bottom Sheet & Dialog Box Theme -->

    <style name="BottomSheetTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowSoftInputMode">stateHidden</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">

        <item name="android:background">@android:color/transparent</item>

    </style>
    <!-- End Bottom Sheet & Dialog Box Theme -->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/blue_200</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>
    <!-- End Bottom Sheet & Dialog Box Theme -->

    <style name="CustomSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/blue_200</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>
    </style>

</resources>