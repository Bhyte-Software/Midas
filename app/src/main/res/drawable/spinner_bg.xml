<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="2dp" android:color="@color/blue_200" />
                    <solid android:color="@color/bg"/>
                    <corners android:radius="@dimen/dimen_10"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_baseline_arrow_drop_down_24" android:end="@dimen/dimen_15" android:width="24dp" android:height="24dp" android:gravity="end|center_vertical"/>
        </layer-list>
    </item>

    <item android:state_enabled="true" android:state_focused="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="2dp" android:color="@color/light_stroke"/>
                    <solid android:color="@color/bg"/>
                    <corners android:radius="@dimen/dimen_10"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_baseline_arrow_drop_down_24" android:end="@dimen/dimen_15" android:width="24dp" android:height="24dp" android:gravity="end|center_vertical"/>
        </layer-list>
    </item>

</selector>