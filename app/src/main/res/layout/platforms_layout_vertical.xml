<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/platform"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="@dimen/dimen_20"
    android:layout_marginStart="@dimen/dimen_20"
    android:layout_marginEnd="@dimen/dimen_20"
    android:background="@drawable/ripple_round_box"
    android:clickable="true"
    android:padding="@dimen/dimen_20">

    <ImageView
        android:contentDescription="@string/image"
        android:id="@+id/platform_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/amazon_logo" />

    <LinearLayout
        android:layout_marginStart="@dimen/dimen_30"
        android:layout_toEndOf="@id/platform_image"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/platform_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text=""
            android:textColor="@color/main_text"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/platform_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:fontFamily="@font/roboto_regular"
            android:text=""
            android:textColor="@color/secondary_text"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>