<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".User.FAQS.VirtualCardFaqsFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_layout"
        app:cardBackgroundColor="@color/ripple_round_box"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/dimen_20"
        app:cardElevation="0dp"
        android:layout_margin="@dimen/dimen_20"
        app:contentPadding="20dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:animateLayoutChanges="true"
            android:id="@+id/layout"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/title"
                    android:textColor="@color/main_text"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="20sp"
                    android:text="@string/virtual_card_faq_one_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="RelativeOverlap" />

                <ImageView
                    android:src="@drawable/collapse"
                    android:id="@+id/expand_collapse_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/image"
                    android:padding="@dimen/dimen_10" />

            </RelativeLayout>

            <TextView
                android:visibility="visible"
                android:id="@+id/detail"
                android:text="@string/virtual_card_faq_one_detail"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/secondary_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_layout2"
        app:cardBackgroundColor="@color/ripple_round_box"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/dimen_20"
        app:cardElevation="0dp"
        android:layout_marginEnd="@dimen/dimen_20"
        android:layout_marginStart="@dimen/dimen_20"
        app:contentPadding="20dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:animateLayoutChanges="true"
            android:id="@+id/layout2"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/virtual_card_faq_two_title"
                    android:textColor="@color/main_text"
                    android:textSize="20sp"
                    tools:ignore="RelativeOverlap" />

                <ImageView
                    android:src="@drawable/expand"
                    android:id="@+id/expand_collapse_icon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/image"
                    android:padding="@dimen/dimen_10" />

            </RelativeLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/detail2"
                android:text="@string/virtual_card_faq_two_detail"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/secondary_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>