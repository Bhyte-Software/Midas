<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/accept_terms_popup"
    android:layout_width="360dp"
    android:layout_height="350dp"
    android:layout_gravity="center"
    android:background="@drawable/blue_popup_border"
    android:elevation="8dp"
    android:orientation="vertical"
    android:padding="20dp"
    android:theme="@style/Theme.MaterialComponents.Light">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_marginTop="@dimen/dimen_20"
            android:id="@+id/warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/popup_info_image" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/warning"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Accept terms of service"
            android:textAlignment="center"
            android:textColor="@color/main_text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_5"
            android:textColor="@color/secondary_text"
            android:fontFamily="@font/roboto_regular"
            android:text="As a requirement to use Midas you have to accept terms of service."
            android:textAlignment="center" />


        <com.google.android.material.button.MaterialButton
            android:layout_marginBottom="@dimen/dimen_20"
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/message"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/dimen_25"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginEnd="@dimen/dimen_25"
            android:backgroundTint="@color/blue_200"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/cancel"
            android:textAllCaps="false"
            app:cornerRadius="35dp" />


    </RelativeLayout>

</RelativeLayout>