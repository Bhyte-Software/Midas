<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/accept_terms_popup"
    android:layout_width="360dp"
    android:layout_height="350dp"
    android:layout_gravity="center"
    android:background="@drawable/blue_popup_border"
    android:elevation="8dp"
    android:orientation="vertical"
    android:padding="20dp"
    android:theme="@style/Theme.MaterialComponents.Light">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_20"
            android:contentDescription="@string/warning_icon_content_description"
            android:src="@drawable/popup_info_image" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/warning"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/darker_grotesque_black"
            android:text="@string/accept_terms_of_service"
            android:textAlignment="center"
            android:textColor="@color/main_text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_5"
            android:fontFamily="@font/darker_grotesque"
            android:text="@string/as_a_requirement_to_use_midas_you_have_to_accept_terms_of_service"
            android:textAlignment="center"
            android:textColor="@color/secondary_text" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/message"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/dimen_25"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginEnd="@dimen/dimen_25"
            android:layout_marginBottom="@dimen/dimen_20"
            android:backgroundTint="@color/blue_200"
            android:fontFamily="@font/darker_grotesque"
            android:text="@string/cancel"
            android:textAllCaps="false"
            app:cornerRadius="35dp" />


    </RelativeLayout>

</RelativeLayout>