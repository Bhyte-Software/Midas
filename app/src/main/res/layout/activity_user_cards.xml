<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".UserCards">


    <TextView
        android:layout_margin="@dimen/dimen_25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/my_cards"
        android:textColor="@color/black"
        android:textSize="26sp" />

    <com.google.android.material.button.MaterialButton
        android:layout_marginStart="@dimen/dimen_25"
        android:layout_marginEnd="@dimen/dimen_25"
        android:onClick="callCardDetails"
        android:layout_width="160dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dimen_15"
        android:fontFamily="@font/roboto_medium"
        android:id="@+id/create_account_button"
        android:text="@string/shuffle"
        android:textAllCaps="false"
        app:cornerRadius="35dp" />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipChildren="false"
        android:foregroundGravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/card1"
            layout="@layout/card"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <include
            android:id="@+id/card2"
            layout="@layout/card"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/translationY" />

        <include
            android:id="@+id/card3"
            layout="@layout/card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/translation2Y" />

    </FrameLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_marginStart="@dimen/dimen_25"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/dimen_50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/dimen_25"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/dimen_90"
        android:fontFamily="@font/roboto_medium"
        android:id="@+id/create_new_card"
        android:text="@string/create_new_card"
        android:textAllCaps="false"
        app:cornerRadius="35dp" />

</androidx.constraintlayout.widget.ConstraintLayout>