<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="vertical"
    tools:context=".User.VirtualCardChooseLabel">

    <RelativeLayout
        android:id="@+id/menu_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dimen_5"
        android:padding="@dimen/dimen_15">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:onClick="callBack"
            android:src="@drawable/back_icon"
            app:tint="@color/blue_200"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_15"
            android:layout_toEndOf="@id/back"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/choose_card_label"
            android:textColor="@color/blue_200"
            android:textSize="26sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu_bar"
        android:background="@drawable/black_card">

    </RelativeLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card"
        android:layout_marginStart="@dimen/dimen_15"
        android:fontFamily="@font/roboto_bold"
        android:text=" What would you like to label \n your card as?"
        android:textColor="@color/blue_200"
        android:textSize="22sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_name_field"
        style="@style/TextInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginStart="@dimen/dimen_15"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="@dimen/dimen_15"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/blue_200"
        app:boxStrokeWidth="2dp"
        app:boxStrokeWidthFocused="2dp"
        app:counterEnabled="false"
        app:endIconTint="@null"
        app:placeholderText="Enter full name"
        app:placeholderTextColor="@color/blue_200"
        app:startIconTint="@null">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@color/white"
            android:drawableStart="@drawable/user_icon"
            android:drawablePadding="@dimen/dimen_10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center_vertical"
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLength="50"
            android:textColor="@color/blue_200"
            android:textSize="18sp"
            tools:ignore="SpeakableTextPresentCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_margin="@dimen/dimen_15"
        android:layout_below="@id/input_name_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/card_label_description" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="callFundVirtualCard"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dimen_25"
        android:text="Continue"
        android:textAllCaps="false"
        app:cornerRadius="35dp" />

</RelativeLayout>