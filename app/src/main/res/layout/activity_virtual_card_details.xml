<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="vertical"
    tools:context=".User.VirtualCardDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:padding="@dimen/dimen_20"
                android:text="@string/card_details"
                android:textColor="@color/black"
                android:textSize="26sp" />


            <RelativeLayout
                android:layout_marginTop="-15dp"
                android:id="@+id/card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/black_card">

                <TextView
                    android:id="@+id/card_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_80"
                    android:layout_marginTop="@dimen/dimen_105"
                    android:fontFamily="@font/roboto_medium"
                    android:text="3672 8229 3829 0372"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_number"
                    android:layout_marginStart="@dimen/dimen_50"
                    android:layout_marginTop="@dimen/dimen_40"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Date"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/card_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_number"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/dimen_40"
                    android:layout_marginEnd="@dimen/dimen_50"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Name"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </RelativeLayout>

            <TextView
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/card_holder"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50"
                android:layout_marginStart="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_20"
                android:background="@drawable/ripple_round_box">

                <TextView
                    android:id="@+id/cardholder_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dimen_20"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/card_holder"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/copy_cardholder_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dimen_20"
                    android:src="@drawable/copy" />

            </RelativeLayout>

            <TextView
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/card_number"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50"
                android:layout_marginStart="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_20"
                android:background="@drawable/ripple_round_box">

                <TextView
                    android:id="@+id/card_number_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dimen_20"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/card_number"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/copy_card_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dimen_20"
                    android:src="@drawable/copy" />

            </RelativeLayout>

            <TextView
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/card_cvv"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50"
                android:layout_marginStart="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_20"
                android:background="@drawable/ripple_round_box">

                <TextView
                    android:id="@+id/cvv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dimen_20"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/card_cvv"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/copy_cvv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dimen_20"
                    android:src="@drawable/copy" />

            </RelativeLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:id="@+id/delete_button"
                app:cornerRadius="35dp"
                android:textAllCaps="false"
                android:text="@string/delete_card"
                android:layout_margin="@dimen/dimen_40"
                android:backgroundTint="@color/red"
                android:layout_height="@dimen/dimen_60"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>