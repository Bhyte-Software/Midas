<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".Common.AppTheme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/blue_200"
            android:elevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/blue_200"
                android:elevation="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:layout_marginEnd="@dimen/dimen_10"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/menu_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:background="?selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:onClick="callSettings"
                        android:padding="@dimen/dimen_10"
                        android:src="@drawable/back_material"
                        app:tint="@color/white"
                        android:contentDescription="@string/back_button_content_description" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dimen_5"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/app_theme"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        tools:ignore="RelativeOverlap" />

                    <ImageView
                        android:id="@+id/upload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:background="?selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:contentDescription="@string/image"
                        android:paddingStart="@dimen/dimen_10"
                        android:paddingTop="@dimen/dimen_5"
                        android:paddingEnd="@dimen/dimen_10"
                        android:paddingBottom="@dimen/dimen_5"
                        android:src="@drawable/help_outline"
                        app:tint="@color/white" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-70dp"
            android:background="@drawable/top_round_corner_overlay"
            android:elevation="10dp"
            android:paddingBottom="@dimen/dimen_25">

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_25"
                android:layout_marginEnd="@dimen/dimen_15"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/light_theme"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/radio_selector"
                    android:button="@color/transparent"
                    android:drawableStart="@drawable/sun"
                    android:drawablePadding="@dimen/dimen_15"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingStart="@dimen/dimen_20"
                    android:paddingTop="@dimen/dimen_30"
                    android:paddingEnd="@dimen/dimen_20"
                    android:paddingBottom="@dimen/dimen_30"
                    android:text="@string/light_theme"
                    android:textColor="@drawable/radio_text"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/dark_theme"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dimen_15"
                    android:background="@drawable/radio_selector"
                    android:button="@color/transparent"
                    android:drawableStart="@drawable/moon"
                    android:drawablePadding="@dimen/dimen_15"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingStart="@dimen/dimen_20"
                    android:paddingTop="@dimen/dimen_30"
                    android:paddingEnd="@dimen/dimen_20"
                    android:paddingBottom="@dimen/dimen_30"
                    android:text="@string/text_view_dark_theme"
                    android:textColor="@drawable/radio_text"
                    android:textSize="18sp" />

            </RadioGroup>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>