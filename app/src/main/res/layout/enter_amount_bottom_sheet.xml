<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/amount_sheet"
    android:background="@drawable/bottom_sheet_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_marginTop="@dimen/dimen_15"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bottom_sheet_handle"
        android:layout_width="40dp"
        android:layout_height="5dp"/>

    <TextView
        android:layout_marginTop="@dimen/dimen_25"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_15"
        android:fontFamily="@font/roboto_bold"
        android:text="How much do you want to fund this\ncard with?"
        android:textColor="@color/blue_200"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/amount_input_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60"
        android:layout_marginStart="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_25"
        android:layout_marginEnd="@dimen/dimen_15"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_cedi_icon"
        android:drawablePadding="15dp"
        android:ems="10"
        android:fontFamily="@font/roboto_medium"
        android:hint="@string/enter_amount"
        android:inputType="numberDecimal|textFilter"
        android:paddingStart="15dp"
        android:paddingEnd="@dimen/dimen_15"
        android:textColor="@color/blue_200"
        android:textSize="18sp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/continue_button"
        android:layout_marginStart="@dimen/dimen_25"
        android:layout_marginTop="@dimen/dimen_25"
        android:layout_marginEnd="@dimen/dimen_25"
        android:layout_marginBottom="@dimen/dimen_25"
        android:onClick="callCreateCardFinal"
        android:text="Continue"
        android:textAllCaps="false"
        app:cornerRadius="35dp" />
    
</LinearLayout>