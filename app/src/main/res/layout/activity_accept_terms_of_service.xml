<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".Common.AcceptTermsOfService">

    <LinearLayout
        android:paddingTop="@dimen/dimen_10"
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_15">

            <RelativeLayout
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Terms of service"
                    android:textColor="@color/black"
                    android:textSize="26sp" />

                <ImageView
                    android:layout_centerVertical="true"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dimen_40"
                    android:src="@drawable/microphone"
                    app:tint="@color/blue_200" />

            </RelativeLayout>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:fontFamily="@font/roboto_regular"
                android:text="Last Updated January 21 2022"
                android:textColor="@color/blue_200" />

            <TextView
                android:id="@+id/warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date"
                android:text="Read these terms and conditions carefully before using our application." />

        </RelativeLayout>

        <View
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blue_light" />

    </LinearLayout>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/dimen_15"
            android:paddingEnd="@dimen/dimen_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:fontFamily="@font/roboto_medium"
                android:text="Acknowledgement"
                android:textColor="@color/black" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy_text" />

            <LinearLayout
                android:layout_marginTop="@dimen/dimen_30"
                android:layout_marginBottom="@dimen/dimen_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:onClick="callPopup"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:id="@+id/decline_button"
                    android:layout_marginEnd="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:text="Decline"
                    android:textAllCaps="false"
                    android:textColor="@color/blue_200"
                    app:cornerRadius="35dp"
                    app:strokeColor="@color/blue_200"
                    app:strokeWidth="1dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/accept_button"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:text="Accept"
                    android:textAllCaps="false"
                    app:cornerRadius="35dp" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>