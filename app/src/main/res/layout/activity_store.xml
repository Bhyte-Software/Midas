<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient"
    android:layout_height="match_parent"
    tools:context=".Store.Store">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/coming_soon" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-30dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/coming_soon"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:padding="5dp"
        android:paddingEnd="@dimen/dimen_10"
        android:paddingStart="@dimen/dimen_10"
        android:text="@string/coming_soon_description"
        android:textAlignment="center"
        android:textSize="18sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/create_card_button"
        android:layout_width="match_parent"
        android:onClick="callMainDashboard"
        android:textAllCaps="false"
        android:text="@string/return_home"
        android:layout_marginTop="@dimen/dimen_60"
        android:layout_marginEnd="@dimen/dimen_25"
        android:layout_marginStart="@dimen/dimen_25"
        app:cornerRadius="35dp"
        android:layout_height="@dimen/dimen_60"/>

</LinearLayout>