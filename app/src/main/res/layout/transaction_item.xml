<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginEnd="@dimen/dimen_20"
    android:layout_marginBottom="@dimen/dimen_20"
    android:clickable="true"
    android:layout_marginStart="@dimen/dimen_20"
    android:background="@drawable/quick_actions_border_ripple"
    android:layout_height="90dp">

    <ImageView
        android:id="@+id/transaction_icon"
        android:layout_width="@dimen/dimen_50"
        android:layout_height="@dimen/dimen_50"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dimen_15"
        android:src="@drawable/deposit_icon" />

    <LinearLayout
        android:id="@+id/view_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dimen_15"
        android:layout_toEndOf="@id/transaction_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/transaction_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Deposit"
            android:textColor="@color/main_text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/transaction_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:fontFamily="@font/roboto_regular"
            android:text="12 Jun 2023, 12:03 AM"
            android:textColor="@color/secondary_text"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginEnd="@dimen/dimen_15"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/transaction_currency"
            android:textColor="@color/secondary_text"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_regular"
            android:layout_gravity="end"
            android:text="@string/cedi_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/transaction_amount"
            android:layout_marginTop="@dimen/dimen_5"
            android:textColor="@color/main_text"
            android:fontFamily="@font/roboto_regular"
            android:textSize="16sp"
            android:layout_gravity="end"
            android:text="-20.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>