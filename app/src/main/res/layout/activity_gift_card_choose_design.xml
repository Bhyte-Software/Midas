<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:background="@drawable/background_gradient"
    tools:context=".User.GiftCardChooseDesign">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/dimen_5"
            android:padding="@dimen/dimen_15">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:onClick="callBack"
                android:src="@drawable/back_icon"
                app:tint="@color/blue_200"
                tools:ignore="ContentDescription,TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_15"
                android:layout_toEndOf="@id/back"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/choose_card_design"
                android:textColor="@color/blue_200"
                android:textSize="26sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/card_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:src="@drawable/gift_card_red" />

    <RelativeLayout
        android:layout_marginTop="-30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/card_one"
            android:layout_width="195dp"
            android:layout_height="195dp"
            android:background="@drawable/gift_card_red_small">

            <ImageView
                android:id="@+id/check_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_marginEnd="@dimen/dimen_15"
                android:layout_marginBottom="@dimen/dimen_15"
                android:src="@drawable/green_checkmark"
                tools:ignore="ImageContrastCheck" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card_two"
            android:layout_width="195dp"
            android:layout_height="195dp"
            android:layout_toEndOf="@id/card_one"
            android:background="@drawable/gift_card_blue_small">

            <ImageView
                android:id="@+id/check_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/dimen_15"
                android:src="@drawable/green_checkmark"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="-10dp"
            android:id="@+id/card_three"
            android:layout_width="195dp"
            android:layout_height="195dp"
            android:layout_below="@id/card_one"
            android:background="@drawable/gift_card_green_small">

            <ImageView
                android:id="@+id/check_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_marginEnd="@dimen/dimen_15"
                android:layout_marginBottom="@dimen/dimen_15"
                android:src="@drawable/green_checkmark"
                android:visibility="invisible" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_marginTop="-10dp"
            android:id="@+id/card_four"
            android:layout_width="195dp"
            android:layout_height="195dp"
            android:layout_below="@id/card_two"
            android:layout_toEndOf="@id/card_three"
            android:background="@drawable/gift_card_black_small">

            <ImageView
                android:id="@+id/check_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/dimen_15"
                android:src="@drawable/green_checkmark"
                android:visibility="invisible" />

        </RelativeLayout>


    </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="@dimen/dimen_25"
            android:text="Continue"
            android:textAllCaps="false"
            app:cornerRadius="35dp"
            tools:ignore="TextContrastCheck" />

    </LinearLayout>

</ScrollView>