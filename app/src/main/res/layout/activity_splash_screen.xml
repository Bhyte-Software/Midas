<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/background_gradient"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">


  <com.airbnb.lottie.LottieAnimationView
      android:id="@+id/loading_animation"
      android:layout_width="85dp"
      android:layout_height="85dp"
      android:layout_above="@id/bhyte_logo"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="@dimen/dimen_105"
      app:lottie_autoPlay="true"
      app:lottie_loop="true"
      app:lottie_rawRes="@raw/loading_liquid" />

    <ImageView
        android:id="@+id/bhyte_logo"
        android:layout_marginBottom="@dimen/dimen_25"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/bhyte_text_logo"
        android:src="@drawable/bhyte_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

  </RelativeLayout>