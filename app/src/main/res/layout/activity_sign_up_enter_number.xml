<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:id="@+id/main_layout"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".AccountCreation.SignUpEnterNumber">

    <ImageView
        android:id="@+id/register_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/registration_image"
        android:src="@drawable/registration_image" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_image"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/registration"
        android:textColor="@color/main_text"
        android:textSize="27sp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/roboto_regular"
        android:padding="5dp"
        android:text="@string/enter_number"
        android:textAlignment="center"
        android:textColor="@color/secondary_text"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/ripple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dimen_20"
        android:layout_marginEnd="@dimen/dimen_20"
        android:layout_marginBottom="@dimen/dimen_20"
        android:background="@drawable/ripple_round_box"
        android:clickable="true"
        android:elevation="@dimen/dimen_5"
        android:paddingStart="@dimen/dimen_20"
        android:paddingTop="@dimen/dimen_40"
        android:paddingEnd="@dimen/dimen_20"
        android:paddingBottom="@dimen/dimen_30">

        <EditText
            android:id="@+id/input_number_field"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60"
            android:autofillHints="none"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ghana_icon"
            android:drawablePadding="15dp"
            android:ems="10"
            android:fontFamily="@font/roboto_medium"
            android:hint="@string/_233_phone_number"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/main_text"
            android:textSize="18sp"
            tools:ignore="RtlSymmetry" />

        <RelativeLayout
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/dimen_25"
            android:layout_marginTop="@dimen/dimen_90"
            android:layout_marginEnd="@dimen/dimen_25"
            android:background="@drawable/blue_button_ripple"
            android:clickable="true">

            <TextView
                android:id="@+id/button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/get_code"
                android:textColor="@color/white" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/button_animation"
                android:layout_width="@dimen/dimen_50"
                android:layout_height="@dimen/dimen_50"
                android:layout_centerInParent="true"
                android:elevation="@dimen/dimen_5"
                android:visibility="gone"
                app:lottie_autoPlay="false"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/button_loading_white" />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>